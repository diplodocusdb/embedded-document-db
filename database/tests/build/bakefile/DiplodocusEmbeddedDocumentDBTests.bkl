ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/TestFramework.bkl;
diplodocusdbpath = envvar("DIPLODOCUSDB");
import $(diplodocusdbpath)/embedded-document-db/include/DiplodocusDB/EmbeddedDocumentDB.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/DiplodocusEmbeddedDocumentDBTests.sln;
vs2017.solutionfile = ../vc15/DiplodocusEmbeddedDocumentDBTests.sln;
vs2015.solutionfile = ../vc14/DiplodocusEmbeddedDocumentDBTests.sln;
vs2013.solutionfile = ../vc12/DiplodocusEmbeddedDocumentDBTests.sln;

program DiplodocusEmbeddedDocumentDBTests : DiplodocusEmbeddedDocumentDB, IshikoTestFramework
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += DiplodocusEmbeddedDocumentDB DiplodocusDBPhysicalStorage DiplodocusDBCore IshikoTestFramework IshikoTestFrameworkCore IshikoConfiguration IshikoDiff IshikoXML IshikoFileSystem IshikoProcess IshikoTime IshikoText IshikoErrors;
        libs += fmt boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../src/TreeDBKeyTests.h
        ../../src/TreeDBValueTests.h
        ../../src/XMLTreeDBTests/XMLTreeDBTests.h
        ../../src/NodeIDTests.h
        ../../src/NodeIDAllocatorTests.h
        ../../src/RecordTests.h
        ../../src/SiblingNodesRecordGroupTests.h
        ../../src/SiblingNodesRecordGroupCacheTests.h
        ../../src/MasterFileTests.h
        ../../src/SecondaryFileTests.h
        ../../src/RecordFilesSetTests.h
        ../../src/CachedRecordFilesSetTests.h
        ../../src/EmbeddedTreeDBTests.h
        ../../src/TransactionTests.h
    }

    sources
    {
        ../../src/main.cpp
        ../../src/TreeDBKeyTests.cpp
        ../../src/TreeDBValueTests.cpp
        ../../src/XMLTreeDBTests/XMLTreeDBTests.cpp
        ../../src/NodeIDTests.cpp
        ../../src/NodeIDAllocatorTests.cpp
        ../../src/RecordTests.cpp
        ../../src/SiblingNodesRecordGroupTests.cpp
        ../../src/SiblingNodesRecordGroupCacheTests.cpp
        ../../src/MasterFileTests.cpp
        ../../src/SecondaryFileTests.cpp
        ../../src/RecordFilesSetTests.cpp
        ../../src/CachedRecordFilesSetTests.cpp
        ../../src/EmbeddedTreeDBTests.cpp
        ../../src/TransactionTests.cpp
    }
}

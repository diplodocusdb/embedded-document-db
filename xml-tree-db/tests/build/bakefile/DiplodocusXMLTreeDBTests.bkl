diplodocusdbpath = envvar("DIPLODOCUSDB");
import $(diplodocusdbpath)/tree-db/include/DiplodocusDB/TreeDB/XMLTreeDB.bkl;
ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/Tests.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/DiplodocusXMLTreeDBTests.sln;
vs2017.solutionfile = ../vc15/DiplodocusXMLTreeDBTests.sln;
vs2015.solutionfile = ../vc14/DiplodocusXMLTreeDBTests.sln;
vs2013.solutionfile = ../vc12/DiplodocusXMLTreeDBTests.sln;

program DiplodocusXMLTreeDBTests : DiplodocusXMLTreeDB, IshikoTests
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += DiplodocusXMLTreeDB DiplodocusTreeDBCore DiplodocusDBCore IshikoTests IshikoTestsCore IshikoDiff IshikoFileSystem IshikoProcess IshikoTime IshikoText IshikoErrors fmt boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    sources
    {
        ../../src/main.cpp

    }
}
